generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  isDone      Boolean @default(false)
  createdDate String
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  surname   String
  email     String
  password  String
  isDeleted Boolean @default(false)
  createdDate String
  updatedDate String
}
